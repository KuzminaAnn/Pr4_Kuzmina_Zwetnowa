<Page x:Class="WpfApp1.Pages.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Source="/Image/Image4.png" Height="80" Margin="20" HorizontalAlignment="Center"/>
        <TextBox x:Name="x0" Grid.Row="1" Grid.Column="1" Height="20" Width="80" />
        <TextBox x:Name="xk" Grid.Row="2" Grid.Column="1" Height="20" Width="80" />
        <TextBox x:Name="dx" Grid.Row="3" Grid.Column="1" Height="20" Width="80" />
        <TextBox x:Name="d" Grid.Row="4" Grid.Column="1" Height="20" Width="80" />
        <TextBox x:Name="answer" Grid.Row="5" Grid.Column="1" Grid.RowSpan="4" Width="80" IsReadOnly="True"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="x0" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="xk" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="dx" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="d" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Ответ" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Пример 3" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Button Grid.Row="9" Grid.Column="1" Content="Вычислить" Height="20" Width="80" Click="Button_Click"/>
        <Button Grid.Row="9" Grid.Column="2" Content="Очистить" Height="20" Width="80" Click="Button_Click_1"/>
        <Button Grid.Row="9" Grid.Column="4" Content="На главную" Height="20" Width="80" HorizontalAlignment="Left" Click="Button_Click_3" Margin="0,3,0,0" VerticalAlignment="Top"/>
        <WindowsFormsHost Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" Grid.RowSpan="8">
            <charts:Chart x:Name="ChartPayments">
                <charts:Chart.Legends>
                    <charts:Legend>
                        
                    </charts:Legend>
                </charts:Chart.Legends>
            </charts:Chart>
        </WindowsFormsHost>
    </Grid>
</Page>
